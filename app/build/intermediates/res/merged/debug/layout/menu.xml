<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/see_face" >
    <TextView
        android:id="@+id/textAuthor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:padding="5dp"
        android:text="@string/author2" />

    <TextView
        android:id="@+id/textAuthor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textAuthor2"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="@string/author" />
    
    <TextView
        android:id="@+id/textPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textAuthor1"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="@string/power" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="@string/intro" />

</RelativeLayout>