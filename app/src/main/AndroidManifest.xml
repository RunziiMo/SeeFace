<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wenyan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/ThemeActivity" >
        <activity
            android:name="com.wenyan.MenuScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wenyan.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.wenyan.ImageSelect"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.wenyan.ShowImageActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.wenyan.DisplayMessageActivity"
            android:label="@string/showResult"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="com.wenyan.CameraActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>